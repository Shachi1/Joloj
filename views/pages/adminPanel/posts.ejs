<%- include('../../partials/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

    <div class="container-fluid">
    
        <div class="row">
            <div class="col-md-2">
                
            </div>
    
            <div class="col-md-10 my-5">
                <div class="card card-body">
                    <h5>List Of My Posts(Click on post to edit or delete)</h5>
                    <div class="row">
                        <% if (posts.length === 0) { %>
                        <div class="text-center text-muted">
                            <p>There is no posts available right now</p>
                            <a href="/posts/create" class="btn btn-primary btn-sm"> Create Post Now </a>
                        </div>
                        <% } else { %>
                        <% for (let post of posts.reverse()) { %>
                        <div class="card col-sm-3 m-3">
                            
                            <div class="card-body">
                                <a href="/posts/edit/<%= post._id %>" style="color: #222;">
                                    <h5><%= post.title %></h5>
                                </a>
                            </div>
                        </div>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <br><br><br><br><br><br><br><br><br>
    </div>

<%- include('../../partials/footer.ejs') %>
</body>

</html>