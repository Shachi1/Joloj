<%- include('../partials/head.ejs') %>
<div id="logreg-forms">
    <form action="/signup" method="POST">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
        <div class="form-group">
            <input type="text" name="username" id="username" class="form-control <%= error.username ?'is-invalid' : '' %>" value="<%= value.username ? value.username : '' %>" placeholder="Username" autofocus="">
            <div class="invalid-feedback">
                <%= error.username && error.username %>
            </div>
        </div>
        <div class="form-group">
            <input type="email" name="email" id="email" class="form-control <%= error.email ?'is-invalid' : '' %>" value="<%= value.email ? value.email : '' %>" placeholder="Email">
            <div class="invalid-feedback">
                <%= error.email && error.email %>
            </div>
        </div>
        <div class="form-group">
            <input type="password" name="password" id="password" class="form-control <%= error.password ?'is-invalid' : '' %>" value="<%= value.password ? value.password : '' %>" placeholder="Password">
            <div class="invalid-feedback">
                <%= error.password && error.password %>
            </div>
        </div>
        <div class="form-group">
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control <%= error.confirmPassword ?'is-invalid' : '' %>" placeholder="Confirm Password">
            <div class="invalid-feedback">
                <%= error.confirmPassword && error.confirmPassword %>
            </div>
        </div>
        <!-- <input type="submit" class="btn btn-primary btn-block" value="Sign up"> -->
        <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-user-plus"></i> Sign up
        </button>
    </form>
        <!-- <button class="btn btn-primary btn-block" type="button" id="btn-signup"><i class="fas fa-user-plus"></i> Sign up </button> -->

</div>

<%- include('../partials/footer.ejs') %>

</body>

</html>